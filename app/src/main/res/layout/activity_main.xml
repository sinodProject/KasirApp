<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card_dashboard_iv_bg"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:layout_marginTop="@dimen/lima_enam"
        android:layout_marginStart="@dimen/dua_delapan"
        android:layout_marginEnd="@dimen/dua_delapan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/card_dashboard_iv_image"
        style="@style/ImageUser"
        android:layout_marginStart="@dimen/enam_belas"
        android:layout_height="140dp"
        android:layout_width="90dp"
        android:background="@drawable/smiley"
        app:layout_constraintBottom_toBottomOf="@+id/card_dashboard_iv_bg"
        app:layout_constraintStart_toStartOf="@+id/card_dashboard_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/card_dashboard_iv_bg" />

    <TextView
        android:id="@+id/card_dashboard_tv_title"
        style="@style/TextContentTitle"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="@dimen/enam_belas"
        android:text="Selamat datang"
        app:layout_constraintBottom_toBottomOf="@+id/card_dashboard_iv_bg"
        app:layout_constraintStart_toEndOf="@+id/card_dashboard_iv_image"
        app:layout_constraintTop_toTopOf="@+id/card_dashboard_iv_bg" />

    <TextView
        android:id="@+id/card_dashboard_tv_desc"
        style="@style/TextContentDescription"
        android:text="Haii semoga harimu menyenangkan"
        android:layout_marginStart="@dimen/enam_belas"
        app:layout_constraintStart_toEndOf="@+id/card_dashboard_iv_image"
        app:layout_constraintTop_toBottomOf="@+id/card_dashboard_tv_title" />


    <ImageView
        android:id="@+id/card_datauser_iv_bg"
        style="@style/BaseCard"
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:layout_marginTop="@dimen/dua_empat"
        android:background="@drawable/card_background"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_dashboard_iv_bg" />

    <ImageView
        android:id="@+id/card_user_iv_image"
        style="@style/ImageUser"
        android:layout_marginStart="@dimen/enam_belas"
        android:background="@drawable/barista"
        app:layout_constraintBottom_toBottomOf="@+id/card_datauser_iv_bg"
        app:layout_constraintStart_toStartOf="@+id/card_datauser_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/card_datauser_iv_bg" />

    <TextView
        android:id="@+id/card_user_tv_title"
        style="@style/TextContentTitle"
        android:layout_marginStart="@dimen/enam_belas"
        android:text="Data User"
        app:layout_constraintBottom_toBottomOf="@+id/card_datauser_iv_bg"
        app:layout_constraintStart_toEndOf="@+id/card_user_iv_image"
        app:layout_constraintTop_toTopOf="@+id/card_datauser_iv_bg" />

    <ImageView
        android:id="@+id/card_menu_iv_bg"
        style="@style/BaseCard"
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:layout_marginTop="@dimen/dua_empat"
        android:background="@drawable/card_background"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_datauser_iv_bg" />

    <ImageView
        android:id="@+id/card_menu_iv_image"
        style="@style/ImageUser"
        android:layout_marginStart="@dimen/enam_belas"
        android:background="@drawable/soto_ayam"
        app:layout_constraintBottom_toBottomOf="@+id/card_menu_iv_bg"
        app:layout_constraintStart_toStartOf="@+id/card_menu_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/card_menu_iv_bg" />

    <TextView
        android:id="@+id/card_menu_tv_title"
        style="@style/TextContentTitle"
        android:layout_marginStart="@dimen/enam_belas"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="@+id/card_menu_iv_bg"
        app:layout_constraintStart_toEndOf="@+id/card_menu_iv_image"
        app:layout_constraintTop_toTopOf="@+id/card_menu_iv_bg" />

    <ImageView
        android:id="@+id/card_meja_iv_bg"
        style="@style/BaseCard"
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:layout_marginTop="@dimen/dua_empat"
        android:background="@drawable/card_background"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_menu_iv_bg" />

    <ImageView
        android:id="@+id/card_meja_iv_image"
        style="@style/ImageUser"
        android:layout_marginStart="@dimen/enam_belas"
        android:background="@drawable/meja"
        app:layout_constraintBottom_toBottomOf="@+id/card_meja_iv_bg"
        app:layout_constraintStart_toStartOf="@+id/card_meja_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/card_meja_iv_bg" />

    <TextView
        android:id="@+id/card_meja_tv_title"
        style="@style/TextContentTitle"
        android:layout_marginStart="@dimen/enam_belas"
        android:text="Meja"
        app:layout_constraintBottom_toBottomOf="@+id/card_meja_iv_bg"
        app:layout_constraintStart_toEndOf="@+id/card_meja_iv_image"
        app:layout_constraintTop_toTopOf="@+id/card_meja_iv_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>